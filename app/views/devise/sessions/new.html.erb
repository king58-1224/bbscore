<div class="sessions">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class='form-text-wrap'>
    <label class="form-text">チーム名（必須）</label><br />
    <%= f.text_field :name, class:"input-default", autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード（必須）</label>
      <%= f.password_field :password, class:"input-default", autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class='form-text-wrap-1'>
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
  </div>
  <div class="session-btn">
    <%= f.submit "ログイン", class:"session-btn-1"%>
  </div>
<% end %>
</div>
<%#= render "devise/shared/links" %>
